        </div>
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .highlights-section {
    padding: 3rem 1rem;
  }

  @media (min-width: 768px) {
    .highlights-section {
      padding: 5rem 2rem;
    }
  }

  .highlights-section > .container {
    max-width: 1200px;
  }

  .highlights-section h2 {
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .highlights-section > .container > p {
    text-align: center;
    max-width: 780px;
    margin: 0 auto 3rem;
    color: #444;
    line-height: 1.7;
  }

  /* 2-column grid on desktop */
  .highlights-industries {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(2, 1fr);
    padding: 0;
  }

  /* Each card: image left, content right */
  .highlights-industries .highlight {
    display: flex;
    flex-direction: row;
    border-radius: 10px;
    background-color: #eef3ff;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.07);
    transition: box-shadow 0.25s ease, transform 0.25s ease;
  }

  .highlights-industries .highlight:hover {
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.13);
    transform: translateY(-2px);
  }

  /* Image: fixed width column */
  .highlights-industries .highlight img {
    width: 200px;
    min-width: 200px;
    height: 100%;
    object-fit: cover;
    flex-shrink: 0;
  }

  /* Content column */
  .highlights-industries .highlight .content {
    padding: 1.75rem 1.75rem 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .highlights-industries .highlight h3 {
    font-size: 1.6rem;
    margin-bottom: 0.6rem;
    color: #20204b;
  }

  .highlights-industries .highlight-description {
    font-size: 0.95rem;
    color: #555;
    line-height: 1.65;
    margin-bottom: 1.25rem;
  }

  /* CTA link */
  .highlights-industries .highlight a {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    align-self: flex-start;
    background-color: #20204b;
    color: white;
    border-radius: 6px;
    padding: 0.8rem 1rem;
    text-decoration: none;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: background-color 0.2s ease, transform 0.2s ease;
  }

  .highlights-industries .highlight a:hover {
    background-color: #16163a;
    transform: translateX(3px);
  }

  /* Tablet: single column, keep horizontal layout */
  @media (max-width: 1024px) {
    .highlights-industries {
      grid-template-columns: 1fr;
    }
  }

  /* Mobile: stack image above content */
  @media (max-width: 640px) {
    .highlights-industries .highlight {
      flex-direction: column;
    }

    .highlights-industries .highlight img {
      width: 100%;
      min-width: unset;
      height: 200px;
    }
  }
{% endstylesheet %}

