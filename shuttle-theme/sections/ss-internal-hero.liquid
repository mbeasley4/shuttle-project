{% comment %}
  Internal Page Hero
  - Background image with dark overlay
  - White text
  - Tailwind CSS
{% endcomment %}

<section class="relative w-full overflow-hidden internal-hero">
  {%- if section.settings.background_image != blank -%}
    <div
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('{{ section.settings.background_image | image_url: width: 2400 }}');"
      aria-hidden="true"
    ></div>
  {%- endif -%}

  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-black/60"></div>

  <!-- Content -->
  <div class="relative z-10 mx-auto max-w-7xl px-6 py-16 md:py-24 text-white internal-hero__content">
    <h1 class="internal-hero__heading text-3xl md:text-5xl font-semibold leading-tight">
      {{ section.settings.heading | default: page.title }}
    </h1>

    {%- if section.settings.subheading != blank -%}
      <p class="internal-hero__subheading mt-4 max-w-2xl text-lg md:text-xl text-white/90">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}
  </div>
</section>
{% stylesheet %}
  .internal-hero__content {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .internal-hero__heading {
    max-width: 48rem;
  }

  .internal-hero__subheading {
    margin-left: auto;
    margin-right: auto;
  }
{% endstylesheet %}
{% schema %}
{
  "name": "Internal Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "presets": [
    {
      "name": "Internal Hero"
    }
  ]
}
{% endschema %}