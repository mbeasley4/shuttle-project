{% comment %}
  Side-by-Side Content Section
  - 50/50 layout (text + image)
  - Responsive stack on mobile
  - Tailwind CSS
{% endcomment %}

<section class="w-full py-12 md:py-20">
  <div class="mx-auto max-w-7xl px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">

      <!-- Text Column -->
      <div class="order-2 md:order-1">
        <h2 class="text-2xl md:text-4xl font-semibold text-gray-900">
          {{ section.settings.heading }}
        </h2>

        {%- if section.settings.subheading != blank -%}
          <p class="mt-4 text-lg text-gray-600">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}

        {%- if section.settings.body != blank -%}
          <div class="mt-6 text-gray-700 space-y-4">
            {{ section.settings.body }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
          <a
            href="{{ section.settings.button_link }}"
            class="inline-block mt-8 rounded-md bg-black px-6 py-3 text-white font-medium hover:bg-gray-800 transition"
          >
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>

      <!-- Image Column -->
      <div class="order-1 md:order-2">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            alt="{{ section.settings.image.alt | escape }}"
            class="w-full h-auto rounded-md object-cover"
            loading="lazy"
          >
        {%- else -%}
          <div class="aspect-[4/3] bg-gray-100 rounded-lg"></div>
        {%- endif -%}
      </div>

    </div>
  </div>
</section>
{% schema %}
{
  "name": "Side-by-Side Content",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Section heading"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body content",
      "default": "<p>Add your content here.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Side-by-Side Content"
    }
  ]
}
{% endschema %}